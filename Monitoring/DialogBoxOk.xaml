<Window x:Class="Monitoring.DialogBoxOk"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" 
        Title="تائید" Loaded="Window_Loaded_1"
        ShowInTaskbar="False" WindowStartupLocation="CenterScreen" ResizeMode="CanResizeWithGrip">
    <Grid FlowDirection="RightToLeft">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Name="TextBlockMessage" Text="خالی" TextWrapping="Wrap" Margin="10,5,5,10"/>

        <telerik:RadButton Name="ButtonOk" Grid.Row="1"
                Width="70" Height="30" Content="تائید" IsDefault="True" Margin="0,5" HorizontalAlignment="Center"
                               Click="ButtonOk_Click_1"/>
    </Grid>
</Window>
