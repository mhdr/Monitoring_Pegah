<UserControl x:Class="Monitoring.ChartTooltip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Loaded="UserControl_Loaded">
    <Grid FlowDirection="RightToLeft">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock FontFamily="./Fonts/#B Titr" Text="دما : " VerticalAlignment="Center"/>
                <TextBlock Name="TextblockValue" VerticalAlignment="Center"/>
                <TextBlock Text=" درجه سانتیگراد" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock FontFamily="./Fonts/#B Titr" Text="زمان : " VerticalAlignment="Center"/>
                <TextBlock Name="TextBlockDate" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
